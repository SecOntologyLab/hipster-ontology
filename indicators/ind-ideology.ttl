ind:IDEO-01 a ind:IdeologyIndicator ;
    rdfs:label "Core Narratives and Themes"@en ;
    ind:indicatorID "IDEO-01" ;
    ind:definition "Overarching ideological narratives (class struggle, supremacy, national purity, authoritarian order)."@en ;
    ind:hipsterContext "Identifies worldview framing and ideological alignment across content, actors, and communities."@en ;
    ind:systemRequirements "Narrative taxonomy; clustering; longitudinal tracking; linkage to actors, symbols, events."@en ;
    ind:hasScope ind:AnalyticalNarrative, ind:Person ;
    ind:hasAnalyticalLevel ind:L2 ;
    ind:hasFunctionality hyp:Core_Narratives_and_Themes .

