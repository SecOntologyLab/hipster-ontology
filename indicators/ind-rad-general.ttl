ind:RAD-GEN-01 a ind:GeneralRadicalizationIndicator ;
    rdfs:label "Related Media - Images and Symbols"@en ;
    ind:indicatorID "RAD-GEN-01" ;
    ind:definition "All images and symbolic visual elements published together with a narrative or post, including icons, symbols, memes, and illustrative graphics."@en ;
    ind:hipsterContext "Enables visual grounding of radical narratives and symbolic analysis."@en ;
    ind:systemRequirements "Image gallery per narrative; linkage to post text; symbol tagging; analyst drill-down."@en ;
    ind:hasScope ind:Post, ind:AnalyticalNarrative ;
    ind:hasAnalyticalLevel ind:L1 .

ind:RAD-GEN-02 a ind:GeneralRadicalizationIndicator ;
